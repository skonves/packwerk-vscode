{
  "name": "packwerk",
  "version": "0.0.1",
  "publisher": "Gusto",
  "displayName": "packwerk",
  "description": "run packwerk check on current Ruby code.",
  "engines": {
    "vscode": "^1.32.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skonves/packwerk-vscode.git"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:ruby",
    "onCommand:ruby.packwerk"
  ],
  "main": "./out/src/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "format": "tsfmt -r src/*",
    "compile": "tsc -watch -p ./",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "contributes": {
    "languages": [
      {
        "id": "ruby",
        "extensions": [
          ".rb"
        ]
      },
      {
        "id": "gemfile",
        "filenamePatterns": [
          "Gemfile"
        ]
      }
    ],
    "commands": [
      {
        "command": "ruby.packwerk",
        "title": "Ruby: run packwerk check"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ruby-Packwerk configuration",
      "properties": {
        "ruby.packwerk.executePath": {
          "type": "string",
          "default": "",
          "description": "execution path of packwerk."
        },
        "ruby.packwerk.configFilePath": {
          "type": "string",
          "default": "",
          "description": "Filepath to the configuration file for Packwerk"
        },
        "ruby.packwerk.onSave": {
          "type": "boolean",
          "default": true,
          "description": "execute packwerk on save."
        },
        "ruby.packwerk.useBundler": {
          "type": "boolean",
          "default": false,
          "description": "execute packwerk using bundler (ie 'bundle exec packwerk')"
        }
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/mocha": "^5.2.6",
    "@types/node": "^13.7.7",
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.0",
    "tslint": "^5.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/vscode": "^1.62.0",
    "vscode-test": "^1.6.1"
  }
}
